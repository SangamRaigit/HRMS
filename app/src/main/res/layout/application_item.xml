<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/crd_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/txt_job_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_computer_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:text="Job Tittle"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/txt_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_job_tittle"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimary"
                android:text="Salary (3 LPA )"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_baseline_computer_24"
                    android:drawablePadding="10dp"
                    android:text="Company Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_salary"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_baseline_description_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:text="This is Description"
                android:textSize="16dp" />


            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_desc"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_name"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_job_tittle"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:text=" User Email"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/txt_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_job_tittle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:text=" User Email"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                </LinearLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_info"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Make Call for Hiring"
                android:textAllCaps="false"
                android:textSize="18dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>




